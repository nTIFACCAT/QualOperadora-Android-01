<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16">

            <TextView
                android:textSize="25dp"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/background_dark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="131dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtFone"
                android:layout_weight="2.25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="59dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DDD + telefone"
                android:id="@+id/textView"
                android:layout_above="@+id/txtFone"
                android:layout_alignLeft="@+id/txtFone"
                android:layout_alignStart="@+id/txtFone"
                android:layout_marginLeft="69dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="85dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:text="Consultar"
            android:id="@+id/btBuscar"

            android:layout_weight="0.80"

            android:layout_marginBottom="70dp"
            android:layout_above="@+id/txtUF"
            android:layout_toRightOf="@+id/txtUF" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="197dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="UF:   "
            android:id="@+id/textUF"
            android:layout_above="@+id/txtPortabilidade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="36dp"
            android:layout_weight="0.25" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtUF"
            android:layout_alignTop="@+id/textUF"
            android:layout_alignLeft="@+id/txtPortabilidade"
            android:layout_alignStart="@+id/txtPortabilidade"
            android:layout_weight="0.24" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="37dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portabilidade: "
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...: "
            android:id="@+id/txtPortabilidade"
            android:layout_alignTop="@+id/textPortabilidade"
            android:layout_toRightOf="@+id/textPortabilidade"
            android:layout_marginLeft="27dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="65dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligar"
                android:id="@+id/btLigar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>